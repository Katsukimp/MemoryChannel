using MemoryEventBus.Domain.Events.Aggregate;
using MemoryEventBus.Domain.Events.Interfaces.Base;
using Microsoft.Extensions.Logging;
using System.Collections.Concurrent;
using System.Threading.Channels;

namespace MemoryEventBus.Domain.Events
{
    public class EventChannelManager : IEventChannelManager
    {
        private readonly ConcurrentDictionary<Type, Channel<DomainEvent>> _channels = new();
        private readonly ILogger<EventChannelManager> _logger;
        private readonly IEventBusMetrics? _metrics;

        public EventChannelManager(ILogger<EventChannelManager> logger, IEventBusMetrics? metrics = null)
        {
            _logger = logger;
            _metrics = metrics;
        }
        
        public Channel<DomainEvent> GetOrCreateChannel<TEvent>() where TEvent : DomainEvent
        {
            return _channels.GetOrAdd(typeof(TEvent), _ => 
            {
                var channel = Channel.CreateUnbounded<DomainEvent>(new UnboundedChannelOptions
                {
                    SingleReader = false,
                    SingleWriter = false,
                    AllowSynchronousContinuations = false // Better for performance in high-throughput scenarios
                });
                
                _logger.LogInformation("Created unbounded channel for event type {EventType}", typeof(TEvent).Name);
                return channel;
            });
        }

        public Channel<DomainEvent> GetOrCreateBoundedChannel<TEvent>(int capacity) where TEvent : DomainEvent
        {
            return _channels.GetOrAdd(typeof(TEvent), _ => 
            {
                var channel = Channel.CreateBounded<DomainEvent>(new BoundedChannelOptions(capacity)
                {
                    FullMode = BoundedChannelFullMode.Wait, // Apply backpressure
                    SingleReader = false,
                    SingleWriter = false,
                    AllowSynchronousContinuations = false
                });
                
                _logger.LogInformation("Created bounded channel for event type {EventType} with capacity {Capacity}", 
                    typeof(TEvent).Name, capacity);
                return channel;
            });
        }

        public async Task<bool> TryWriteAsync<TEvent>(TEvent @event, CancellationToken cancellationToken = default) where TEvent : DomainEvent
        {
            if (!_channels.TryGetValue(typeof(TEvent), out var channel))
            {
                _logger.LogWarning("Channel for event type {EventType} not found", typeof(TEvent).Name);
                return false;
            }

            try
            {
                await channel.Writer.WriteAsync(@event, cancellationToken);
                _metrics?.RecordEventPublished<TEvent>(typeof(TEvent).Name);
                return true;
            }
            catch (OperationCanceledException)
            {
                _logger.LogWarning("Write operation cancelled for event type {EventType}", typeof(TEvent).Name);
                return false;
            }
            catch (Exception ex)
            {
                _logger.LogError(ex, "Failed to write event of type {EventType}", typeof(TEvent).Name);
                _metrics?.RecordEventFailed<TEvent>(typeof(TEvent).Name, ex.GetType().Name);
                return false;
            }
        }

        public int GetChannelDepth<TEvent>() where TEvent : DomainEvent
        {
            if (_channels.TryGetValue(typeof(TEvent), out var channel))
            {
                var reader = channel.Reader;
                // Note: This is an approximation as Channel doesn't expose exact count
                var depth = reader.CanRead ? 1 : 0; // Simplified implementation
                _metrics?.RecordChannelDepth(typeof(TEvent).Name, depth);
                return depth;
            }
            return 0;
        }

        public void CloseChannel<TEvent>() where TEvent : DomainEvent
        {
            if (_channels.TryRemove(typeof(TEvent), out var channel))
            {
                channel.Writer.Complete();
                _logger.LogInformation("Closed channel for event type {EventType}", typeof(TEvent).Name);
            }
        }

        public int GetChannelCount() => _channels.Count;
    }
}
